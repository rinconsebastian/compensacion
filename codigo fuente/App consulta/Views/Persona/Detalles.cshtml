@model App_consulta.Models.PersonaModel
@{
    ViewData["Title"] = "Detalles " + @Model.Nombre;
    ViewData["Subtitle"] = @Model.Nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row margin-top-50">

    <div class="col-sm-6">
        <div class="row bordeDetallePersona">
            <div class="col-sm-12 align-center">
                <img src="@Model.Foto" style="width: 100%; max-height: 626px">
            </div>
        </div>

    </div>

    <div class="col-sm-6 ">

        <div class="row bordeDetallePersona">
            <div class="col-sm-12">
                <div class="form-group row">

                    <div class="col-sm-12">
                        <h2 class="form-control-plaintext ">@Html.DisplayFor(model => model.Nombre)</h2>

                        <h4 class="form-control-plaintext ">@Html.DisplayFor(model => model.Id)</h4>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Edad" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Edad)</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Telefono" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Telefono)</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Correo" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Correo)</p>
                    </div>
                </div>
            </div>
        </div>



        <div class="row bordeDetallePersona">
            <div class="col-sm-12">

                <div class="form-group row">

                    <div class="col-sm-12">

                        <h4 class="form-control-plaintext ">Información laboral</h4>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Playa" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Playa.Nombre)</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Actividad" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Actividad.Nombre)</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Ambulante" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Ambulante)</p>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Confianza" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Confianza)</p>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<div class="row bordeDetallePersona">
    <div class="col-sm-12">

        <div class="form-group row">

            <div class="col-sm-12">
                <h4 class="form-control-plaintext ">Pagos</h4>
            </div>
        </div>

    </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-3 offset-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Editar</a>
        </div>
        <div class="col-sm-3">
            <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
        </div>
    </div>
